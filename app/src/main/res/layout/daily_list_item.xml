<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="32dp"
    android:paddingEnd="32dp"
    android:paddingLeft="64dp"
    android:paddingStart="64dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    tools:background="#ffaa00">

    <ImageView
        android:id="@+id/imageViewCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@mipmap/bg_temperature"/>

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageViewCircle"
        android:layout_toRightOf="@+id/imageViewCircle"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        app:srcCompat="@mipmap/sunny"/>

    <TextView
        android:id="@+id/dayLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageViewIcon"
        android:layout_toRightOf="@+id/imageViewIcon"
        android:layout_centerVertical="true"
        tools:text="Wednesday"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"/>

    <TextView
        android:id="@+id/temperatureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imageViewCircle"
        android:layout_alignStart="@id/imageViewCircle"
        android:layout_alignRight="@id/imageViewCircle"
        android:layout_alignEnd="@id/imageViewCircle"
        android:layout_alignBottom="@id/imageViewCircle"
        android:layout_alignTop="@id/imageViewCircle"
        android:gravity="center"
        android:textColor="#f25019"
        android:text="100"/>

</RelativeLayout>